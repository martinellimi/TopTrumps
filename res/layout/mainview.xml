<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <View
        android:id="@+id/sidebar"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:background="#6D6D6D" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/sidebar"
        android:src="@drawable/user" />

    <ImageView
        android:id="@+id/imageAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/sidebar"
        android:src="@drawable/android" />

    <TextView
        android:id="@+id/scoreUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/sidebar"
        android:layout_below="@+id/imageUser"
        android:gravity="center_horizontal"
        android:text="SCORE"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/scoreAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageAndroid"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/sidebar"
        android:gravity="center_horizontal"
        android:text="SCORE"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="190dp"
        android:layout_height="245dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/sidebar"
        android:background="@drawable/card3g"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cardName"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:gravity="center_horizontal"
            android:text="CARD NAME"
            android:textColor="#FFFFFF" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/tyrannosaurusrex" >
        </FrameLayout>

        <Button
            android:id="@+id/playGame"
            style="android:buttonStyle"
            android:layout_width="170dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="#FF0000"
            android:padding="0dp"
            android:text="Magic                                                 2"
            android:textColor="#000000"
            android:textSize="9dp" />

        <Button
            android:id="@+id/Button01"
            style="android:buttonStyle"
            android:layout_width="170dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="#FF0000"
            android:padding="0dp"
            android:text="Magic                                                 2"
            android:textColor="#000000"
            android:textSize="9dp" />

        <Button
            android:id="@+id/Button02"
            style="android:buttonStyle"
            android:layout_width="170dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="#FF0000"
            android:padding="0dp"
            android:text="Magic                                                 2"
            android:textColor="#000000"
            android:textSize="9dp" />

        <Button
            android:id="@+id/Button03"
            style="android:buttonStyle"
            android:layout_width="170dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="#FF0000"
            android:padding="0dp"
            android:text="Magic                                                 2"
            android:textColor="#000000"
            android:textSize="9dp" />

        <Button
            android:id="@+id/Button04"
            style="android:buttonStyle"
            android:layout_width="170dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="#FF0000"
            android:padding="0dp"
            android:text="Magic                                                 2"
            android:textColor="#000000"
            android:textSize="9dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="245dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginRight="17dp"
        android:background="@drawable/card3g"
        android:orientation="vertical" >

    </LinearLayout>

</RelativeLayout>